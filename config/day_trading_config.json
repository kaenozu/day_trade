    "custom_symbols": {
      "description": "ユーザー独自の銘柄マッピング",
      "note": "このセクションにユーザー固有の銘柄を追加可能"
    }
  },

  "data_fallback": {
    "description": "データフォールバック設定（Issue #849対応）",
    "enable_mock_data": true,
    "mock_data_notification": true,
    "retry_attempts": 3,
    "retry_delay_seconds": 0.5,
    "data_source_priority": ["real_data_provider", "yfinance_fetcher", "mock_data"]
  },

  "market_timing": {
    "description": "市場時間とタイミング設定",
    "session_multipliers": {
      "PRE_MARKET": 0.5,
      "MORNING_SESSION": 1.3,
      "LUNCH_BREAK": 0.3,
      "AFTERNOON_SESSION": 1.0,
      "AFTER_MARKET": 0.4
    },
    "timezone": "Asia/Tokyo",
    "market_calendar": "JPX"
  },

  "ml_integration": {
    "description": "ML統合設定",
    "enable_ml_predictions": true,
    "model_confidence_threshold": 0.7,
    "ensemble_methods": ["random_forest", "gradient_boosting", "neural_network"],
    "feature_engineering": {
      "technical_indicators": ["RSI", "MACD", "Bollinger_Bands"],
      "price_features": ["open", "high", "low", "close", "volume"],
      "derived_features": ["price_change", "daily_range", "volume_ratio"]
    }
  },

  "risk_management": {
    "description": "リスク管理設定",
    "default_profit_target": 2.0,
    "default_stop_loss": 1.5,
    "max_position_size": 0.1,
    "max_daily_trades": 10,
    "volatility_threshold": 6.0
  },

  "symbol_selection": {
    "description": "動的銘柄選択設定",
    "enable_dynamic_selection": true,
    "liquidity_threshold": 1000000,
    "volatility_range": [0.02, 0.08],
    "market_cap_min": 100000000000,
    "max_symbols": 50,
    "refresh_interval_hours": 24
  },

  "logging": {
    "description": "ロギング設定（Issue #849対応）",
    "level": "INFO",
    "enable_file_logging": true,
    "log_file_path": "logs/day_trading_engine.log",
    "max_log_file_size": 10485760,
    "backup_count": 5,
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },

  "performance": {
    "description": "パフォーマンス設定",
    "enable_caching": true,
    "cache_ttl_seconds": 300,
    "parallel_processing": true,
    "max_workers": 4
  },

  "notifications": {
    "description": "通知設定",
    "enable_notifications": false,
    "notification_types": ["signal_change", "error", "system_status"],
    "notification_channels": ["email", "webhook"]
  },

  "development": {
    "description": "開発・テスト設定",
    "debug_mode": false,
    "mock_data_mode": false,
    "test_symbols": ["7203", "9984", "8306"],
    "simulation_mode": false
  },

  "compliance": {
    "description": "コンプライアンス設定",
    "disclaimer_text": "これはデモ版です。実際の投資判断には使用しないでください。",
    "risk_warning": "投資にはリスクが伴います。十分なリスク評価を行ってください。",
    "data_usage_notice": "市場データは情報提供目的のみです。"
  }
}