{
  "coverage_targets": {
    "overall": {
      "minimum": 60,
      "good": 70,
      "excellent": 80,
      "ideal": 90
    },
    "by_package": {
      "core": {
        "minimum": 80,
        "good": 85,
        "excellent": 90,
        "ideal": 95
      },
      "data": {
        "minimum": 70,
        "good": 80,
        "excellent": 85,
        "ideal": 90
      },
      "analysis": {
        "minimum": 65,
        "good": 75,
        "excellent": 80,
        "ideal": 85
      },
      "utils": {
        "minimum": 75,
        "good": 80,
        "excellent": 85,
        "ideal": 90
      },
      "models": {
        "minimum": 70,
        "good": 80,
        "excellent": 85,
        "ideal": 90
      },
      "cli": {
        "minimum": 50,
        "good": 60,
        "excellent": 70,
        "ideal": 80
      },
      "automation": {
        "minimum": 60,
        "good": 70,
        "excellent": 75,
        "ideal": 80
      }
    },
    "by_file_type": {
      "core_modules": {
        "patterns": ["**/core/*.py"],
        "minimum": 80,
        "good": 85,
        "excellent": 90,
        "ideal": 95
      },
      "data_modules": {
        "patterns": ["**/data/*.py"],
        "minimum": 70,
        "good": 80,
        "excellent": 85,
        "ideal": 90
      },
      "utility_modules": {
        "patterns": ["**/utils/*.py"],
        "minimum": 75,
        "good": 80,
        "excellent": 85,
        "ideal": 90
      },
      "analysis_modules": {
        "patterns": ["**/analysis/*.py"],
        "minimum": 65,
        "good": 75,
        "excellent": 80,
        "ideal": 85
      },
      "test_files": {
        "patterns": ["**/test_*.py", "**/tests/*.py"],
        "minimum": 95,
        "good": 98,
        "excellent": 99,
        "ideal": 100
      }
    }
  },
  "quality_gates": {
    "fail_under": 60,
    "warn_under": 70,
    "block_pr_under": 50,
    "new_code_minimum": 80
  },
  "reporting": {
    "generate_html": true,
    "generate_xml": true,
    "generate_json": true,
    "include_branch_coverage": true,
    "show_missing_lines": true,
    "exclude_patterns": [
      "*/test_*",
      "*/tests/*",
      "*/__pycache__/*",
      "*/migrations/*",
      "*/venv/*",
      "*/node_modules/*"
    ]
  },
  "notifications": {
    "coverage_drop_threshold": 5.0,
    "send_email_on_failure": false,
    "send_slack_on_success": false,
    "notify_on_improvement": true
  },
  "trends": {
    "track_history": true,
    "history_length": 30,
    "improvement_threshold": 2.0,
    "decline_threshold": -3.0
  }
}
