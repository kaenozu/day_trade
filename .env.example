# Issue #800 Phase 2: CI/CD環境変数テンプレート
# 各環境（開発・ステージング・本番）用設定

# =============================================================================
# 基本設定
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# データベース設定
# =============================================================================
POSTGRES_DB=day_trade
POSTGRES_USER=day_trade_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# =============================================================================
# Redis設定
# =============================================================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# 市場データAPI設定
# =============================================================================
MARKET_DATA_API_KEY=your_market_data_api_key_here
YAHOO_FINANCE_API_KEY=optional_yahoo_finance_key
ALPHA_VANTAGE_API_KEY=optional_alpha_vantage_key

# =============================================================================
# 監視・可視化設定
# =============================================================================
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here
PROMETHEUS_RETENTION_DAYS=30

# =============================================================================
# 通知設定
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@company.com
EMAIL_PASSWORD=your_email_password

# =============================================================================
# セキュリティ設定
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here
API_KEY_ENCRYPTION_KEY=your_api_encryption_key_here
SSL_CERT_PATH=/etc/ssl/certs/day-trade.crt
SSL_KEY_PATH=/etc/ssl/private/day-trade.key

# =============================================================================
# EnsembleSystem (93%精度) 設定
# =============================================================================
ML_MODEL_PATH=/app/models
MODEL_UPDATE_INTERVAL_HOURS=24
ENSEMBLE_CONFIG_USE_XGBOOST=true
ENSEMBLE_CONFIG_USE_CATBOOST=true
ENSEMBLE_CONFIG_USE_RANDOM_FOREST=true
ENSEMBLE_CONFIG_USE_LSTM_TRANSFORMER=false

# =============================================================================
# スケジューラ設定
# =============================================================================
SCHEDULER_CONFIG_PATH=/app/schedules
MARKET_HOURS_TIMEZONE=Asia/Tokyo
AUTO_TRADING_ENABLED=false
TRADING_HOURS_START=09:00
TRADING_HOURS_END=15:00

# =============================================================================
# パフォーマンス設定
# =============================================================================
MAX_PARALLEL_PREDICTIONS=10
CACHE_TTL_SECONDS=300
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10

# =============================================================================
# 開発・テスト設定
# =============================================================================
DEBUG=false
TESTING=false
PYTEST_WORKERS=4
COVERAGE_THRESHOLD=90